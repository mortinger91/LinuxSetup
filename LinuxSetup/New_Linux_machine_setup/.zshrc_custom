# Custom .zshrc file:

export PATH=/usr/bin:/home/michele/bin:$PATH

# Set up fzf key bindings and fuzzy completion
eval "$(fzf --zsh)"

# History related settings
HISTSIZE=100000
SAVEHIST=2000000

export EDITOR=nano

export COMPILER_LAUNCHER=ccache

# Custom aliases definitions:
if [ -f ~/.zsh_custom_aliases ]; then
 . ~/.zsh_custom_aliases
fi

# Additional options:
